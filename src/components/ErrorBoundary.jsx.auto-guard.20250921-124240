import React from 'react';
export default class ErrorBoundary extends React.Component{
  constructor(p){ super(p); this.state={hasError:false,err:null}; }
  static getDerivedStateFromError(err){ return {hasError:true,err}; }
  componentDidCatch(err,info){ console.error('UI error:',err,info); }
  render(){ if(!this.state.hasError) return this.props.children;
    return(<div className='container'><div className='card mt-6'><h2 className='text-xl font-bold'>Something went wrong.</h2><pre className='mt-2 whitespace-pre-wrap text-sm text-red-700'>{String(this.state.err)}</pre></div></div>);
  }
}