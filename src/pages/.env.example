# Server Configuration
NODE_ENV=development
PORT=5050
CORS_ORIGIN=http://localhost:3000

# Database
DB_URI=mongodb://localhost:27017/auditdna
# Or MySQL: mysql://user:password@localhost:3306/auditdna

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRE=7d
JWT_COOKIE_EXPIRE=7

# Redis Cache
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_TTL=3600

# USDA API Keys
USDA_AMS_API_KEY=your-ams-api-key
USDA_NASS_API_KEY=your-nass-api-key
USDA_MMN_API_KEY=your-mmn-api-key

# AWS S3 for Document Storage
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-west-2
AWS_S3_BUCKET=auditdna-documents

# Email Configuration (Nodemailer)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
FROM_EMAIL=noreply@auditdna.com
FROM_NAME=AuditDNA

# Payment Processing (Escrow)
STRIPE_SECRET_KEY=sk_test_your-stripe-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret
ESCROW_ACCOUNT_ID=escrow-account-id

# Point/Calyx Integration
POINT_API_KEY=your-point-api-key
POINT_API_URL=https://api.point.com
CALYX_API_KEY=your-calyx-api-key
CALYX_API_URL=https://api.calyx.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=logs/auditdna.log

# Feature Flags
ENABLE_CACHING=true
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_BACKGROUND_JOBS=true

# Testing
TEST_DB_URI=mongodb://localhost:27017/auditdna_test